{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Start Full Stack App",
      "configurations": ["Start function quest5Tier"]
    }
  ],
  "configurations": [
    {
      "name": "Start function quest5Tier",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9229,
      "program": "${workspaceFolder:quest5Tier/func}",
      "preLaunchTask": "backend: start-functions-host"
    },
    {
      "name": "Launch Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "frontend: start-dev-server"
    }
  ]
}
