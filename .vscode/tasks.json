{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "label": "backend: start-functions-host",
      "command": "host start",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "dependsOn": "backend: install-functions-deps",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "npm install (functions)",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "backend: prune-functions-deps",
      "command": "npm prune --production",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "frontend: start-dev-server",
      "command": "npm run dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder:ui}"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "ready in .*ms"
        }
      }
    },
    {
      "label": "backend: predeploy-compound",
      "dependsOn": ["backend: install-functions-deps", "backend: prune-functions-deps"],
      "dependsOrder": "sequence"
    }
  ]
}
